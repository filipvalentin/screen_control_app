<Window x:Class="ScreenControlApp.Desktop.ScreenSharing.QuickControlsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenControlApp.Desktop.ScreenSharing"
        mc:Ignorable="d"
        Title="QuickControlsWindow" Height="44" Width="226"
		WindowStyle="None"
		AllowsTransparency="True"
		Background="LightGray"		>
	<Border BorderBrush="red" BorderThickness="1">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal" Margin="5">
				<Button Content="Disconnect" Padding="5"/>
			</StackPanel>
			<StackPanel Grid.Column="1" HorizontalAlignment="Right" Background="Gray" Cursor="SizeAll" MouseDown="StackPanel_MouseDown" Width="30">
				<Image Source="/Images/three-dots.png" Height="44" Width="20"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>
